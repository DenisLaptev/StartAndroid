<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/retina_wood"
    tools:context="com.a5androidintern2.mybuttondesign.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/btnAndroid"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded"
                android:src="@drawable/ic_android_black_24dp"
                android:onClick="onBtnClick"/>

            <ImageButton
                android:id="@+id/btnFitness"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded"
                android:src="@drawable/ic_fitness_center_black_24dp"
                android:onClick="onBtnClick"/>

            <ImageButton
                android:id="@+id/btnStar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded"
                android:src="@drawable/ic_star_black_24dp"
                android:onClick="onBtnClick"/>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded"
                android:src="@drawable/ic_send_black_24dp"
                android:onClick="onBtnClick"/>

            <ImageButton
                android:id="@+id/btnAttach"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded"
                android:src="@drawable/ic_attach_file_black_24dp"
                android:onClick="onBtnClick"/>

            <ImageButton
                android:id="@+id/btnAudio"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded"
                android:src="@drawable/ic_audiotrack_black_24dp"
                android:onClick="onBtnClick"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/btnCloud"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded"
                android:src="@drawable/ic_cloud_queue_black_24dp"
                android:onClick="onBtnClick"/>

            <ImageButton
                android:id="@+id/btnRun"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded"
                android:src="@drawable/ic_directions_run_black_24dp"
                android:onClick="onBtnClick"/>

            <ImageButton
                android:id="@+id/btnPlay"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded"
                android:src="@drawable/ic_play_arrow_black_24dp"
                android:onClick="onBtnClick"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tvTestTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You pressed the button:"/>

        <TextView
            android:id="@+id/tvTestValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="no button"/>
    </LinearLayout>
</RelativeLayout>
