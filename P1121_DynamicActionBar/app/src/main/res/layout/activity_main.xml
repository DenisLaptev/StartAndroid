<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--Чекбоксы отвечают за работу с элементами
    с помощью первого и второго способов работы с элементами:

    1) Добавление/удаление MenuItem в объект Menu
    2) Показ/скрытие группы в Menu
    -->
    <CheckBox
        android:id="@+id/chbAddDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/add_del">
    </CheckBox>
    <CheckBox
        android:id="@+id/chbVisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/visible">
    </CheckBox>

    <!--Кнопка будет показывать поочередно два фрагмента в контейнере cont.-->
    <Button
        android:id="@+id/btnFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/fragment">
    </Button>

    <!--контейнер.-->
    <FrameLayout
        android:id="@+id/cont"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>
