<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.a5androidintern2.p0211_twoactivity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity">
            <intent-filter>

                <!--
                этот тэг указывает, что активити является основной
                и будет первой отображаться при запускеприложения.
                -->
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityTwo"
            android:label="ActivityTwo">
        </activity>
        <activity
            android:name=".ActivityThree"
            android:label="ActivityThree">
        </activity>
    </application>

</manifest>